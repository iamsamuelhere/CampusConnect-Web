
   <%- include('./partials/header'); -%>
    <title>Home Page</title>
  </head>
  <body>
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 sol-12">
                <div class="jumbotron jumbotron-fluid">
                    <div class="container">
                      <h1 class="display-4" style="text-align: center;">Campus Connect</h1>
                      <p class="lead"style="text-align: center;">Our mission is to get your problems solved at one place</p>
                    </div>
                  </div>
            </div>
        </div>
        
      

        <% if(error==1) {%>
          <div class="alert alert-<%=color%> alert-dismissible fade show" role="alert">
            <strong style="text-align: center;"><%=msg%>!</strong> 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% } %>
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 sol-6">
                
                    <div class="container">
                      <h1 class="display-5" style="text-align: center;">Login</h1>
                    </div>
                    <form method="POST" action="/post-login">
                        <div class="form-group">
                          <label for="exampleInputEmail1">Email address</label>
                          <input type="email" class="form-control" name="email" placeholder="Ex:abc@def.com" required>
                          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                          <label for="exampleInputPassword1">Password</label>
                          <input  type="password" class="form-control" name="password" placeholder="Password" required>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Login now</button>
                        <small id="emailHelp" class="form-text text-muted" style="text-align: center;">Not having an account ?</small>

                        

                    

                      </form>
                      <form method="GET" action="/reg-form">
                        <button type="submit" class="btn btn-danger btn-block">Register now</button>
                      </form>
                  </div>
                  <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 sol-6">
                      <img src="img/login-illus-1.svg" class="img-fluid" style="margin-left: 100px;margin-top: 50px;" alt="" srcset="">
                      
                  </div>
        
            </div>
     <div class="container">
       <div class="row">

  <img class="img-fluid"  style="margin:10px auto ;border-radius: 20px; box-shadow: 10px 10px 5px grey;" src="img/worsk.png" />


       </div>
     </div>


        </div>
   
   <div class="container-fluid">
    <div class="row">
      <div class="col-xl-12 col-md-12 col-lg-6 col-sm-12 col-12">
      </div>
    </div>
  </div>
  <h5 style="text-align: center;">Come join us ❤️</h5>


