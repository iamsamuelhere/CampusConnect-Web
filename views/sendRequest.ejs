<%- include("./partials/header") -%>
<title>Home Page</title>

  </head>
  <body>
    <%- include('./partials/navbar'); -%>
    <div class="container mt-5">

        <div class="row">
            <div class="col-xl-7 col-lg-7 col-md-7 col-sm-7 sol-7">
                
                    <div class="container">
                      <h1 class="display-5" style="text-align: center;">Send request</h1>
                    </div>
                    <form method="POST" action="/requestProduct">
                         <div class="form-row">
                            <div class="form-group col-4">
                                <input type="text" class="form-control" name="name" placeholder="Enter your name" required>
                              </div>
                              <div class="form-group col-8"> 
                                <input  type="text" class="form-control" name="pname" placeholder="Product name (ex:maths book)" required>
                              </div>
                         </div>
                         <div class="form-row">
                            <div class="form-group col-4">
                                <input type="email" class="form-control" name="email" placeholder="Enter Email" required >
                              </div>
                              <div class="form-group col-4"> 
                                <input  type="number" class="form-control" name="ph no" placeholder="Your phone number" required>
                              </div>
                              <div class="form-group col-4"> 
                                <input  type="number" class="form-control" name="price" placeholder="Your expected price" required>
                              </div>
                         </div>
                         <div class="form-row">
                            <div class="form-group col-12">
<textarea class="form-control" rows="5" name="description" placeholder="About product (ex: No of months old ) "></textarea>
                                
                              </div>
                          
                         </div>
                         
                        <button type="submit" class="btn btn-danger btn-block">Send request</button>

                        <small id="emailHelp" class="form-text text-muted" style="text-align: center;">we will get back to u shortly.</small>

                        

                    

                      </form>
        
                  </div>
                  <div class="col-xl-5 col-lg-5 col-md-5 col-sm-5 sol-5">
                      <img src="img/register.png" class="img-fluid" alt="" srcset="">
                      
                  </div>
        
            </div>
        </div>
    

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>